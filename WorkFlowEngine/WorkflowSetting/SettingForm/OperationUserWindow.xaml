        <Button Content="Create" HorizontalAlignment="Left" Name="BtnOperator" Margin="119,228,0,0" VerticalAlignment="Top" Width="75" Click="BtnOperatorClick" TabIndex="5"/>
        <Label  Name="LblErrorMessage"   HorizontalAlignment="Left" Margin="96,192,0,0" VerticalAlignment="Top" Foreground="#FFF30606" RenderTransformOrigin="0.6,0.5"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Name="BtnCancel" Margin="236,227,0,0" VerticalAlignment="Top" Width="75" Click="BtnCancelClick" TabIndex="6"/>
        <PasswordBox Name="TxtPassword" HorizontalAlignment="Left" Margin="176,130,0,0" VerticalAlignment="Top" TabIndex="3" Width="164" Height="26"/>
