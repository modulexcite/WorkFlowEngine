        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LoginWindow" Height="284" Width="331">
    <Grid Margin="0,0,-8,-3">
        <TextBox HorizontalAlignment="Left" Height="23" Margin="110,49,0,0" TextWrapping="Wrap" Text="admin" Name="TxtUserName" VerticalAlignment="Top" Width="161"/>
        <Label Content="User Name：" HorizontalAlignment="Left" Margin="10,46,0,0" VerticalAlignment="Top"/>
        <Label Content="Password：" HorizontalAlignment="Left" Margin="20,94,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="110,94,0,0" TextWrapping="Wrap" Text="admin" Name="TxtPassword" VerticalAlignment="Top" Width="161"/>
        <Button Content="OK" HorizontalAlignment="Left" Margin="76,180,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.253,-0.045" Click="BtnOkClick"/>
        <Button Content="Cancle" HorizontalAlignment="Left" Margin="186,180,0,0" VerticalAlignment="Top" Width="75" Click="BtnCancelClick"/>
        <Label  Name="LblErrorMessage"   HorizontalAlignment="Left" Margin="76,135,0,0" VerticalAlignment="Top" Foreground="#FFF30606"/>

    </Grid>
</Window>
